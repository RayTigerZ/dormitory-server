<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ray.dormitory.mapper.OrganizationMapper">

    <resultMap id="organizationResultMap" type="com.ray.dormitory.bean.po.Organization">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="parentId" column="parent_id"/>
        <collection property="children" ofType="com.ray.dormitory.bean.po.Organization" select="getChildrenByParent"
                    column="id"/>
    </resultMap>

    <resultMap id="organizationOption" type="com.ray.dormitory.bean.bo.OrganizationOption">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="children" ofType="com.ray.dormitory.bean.bo.OrganizationOption" select="getChildren"
                    column="id" fetchType="lazy">
        </collection>
    </resultMap>


    <select id="getChildrenByParent" resultMap="organizationResultMap">
        select * from organization
            where parent_id=#{id} order by code
    </select>

    <select id="getChildren" resultMap="organizationOption">
        select id,`name` from organization
            where parent_id=#{id} order by code
    </select>
    <select id="getOptions" resultMap="organizationOption">
        select id,`name` from organization
            where parent_id is null order by code
    </select>


</mapper>