<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ray.dormitory.mapper.RoleMapper">


    <select id="getRoleOfUser" resultType="com.ray.dormitory.bean.po.Role">
        select r.* from role r where r.id in (select role_id from user_role where user_id=#{userId})
    </select>
</mapper>